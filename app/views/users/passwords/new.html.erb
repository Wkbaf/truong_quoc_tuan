<div class="container">
  <div class="card card-container">
    <p id="profile-name" class="profile-name-card"></p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "form-signin"}) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block btn-signin" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div><!-- /card-container -->
</div><!-- /container -->