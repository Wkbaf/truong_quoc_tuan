<div class="container mt-5">
  <br>
  <h2 class="col-md-6 text-left">Product Info:</h2>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <td><%= product.name %></td>
    </tr>
    <tr>
      <th>Price</th>
      <td><%= product.price %></td>
    </tr>
    <tr>
      <th>Quantity</th>
      <td><%= product.quantity %></td>
    </tr>
    <tr>
      <th>Variant</th>
      <td><%= product.variant %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= product.description %></td>
    </tr>
  </table>
  <h2 class="col-md-6 text-left">Store Info:</h2>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <td><%= store.name %></td>
    </tr>
    <tr>
      <th>Address</th>
      <td><%= store.address %></td>
    </tr>
    <tr>
      <th>Phone</th>
      <td><%= store.phone %></td>
    </tr>
  </table>
  <div class="row text-right">
    <%= link_to 'Back', root_path, class: "btn btn-default" %>
  </div>
</div>