<div class="container mt-5">
  <br>
  <%= render 'homepage/notice' %>
    <div class="row mt-5">
      <h2 class="col-md-6 text-left">List of stores</h2>
       <div class="col-md-6 text-right">
        <%= link_to "Home", root_path, class: "btn btn-primary" %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#store_form">
          Create store
        </button>
       </div> 
    </div>
    <div class="row">
      <div class="col-md-12">
        <table id="store_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Address</th>
              <th></th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
</div>
<%= render :partial => 'form_add_store', locals: {store: store} %>
