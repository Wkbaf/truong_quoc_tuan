<div class="modal fade" id="product_form" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title">Create Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: product, url: products_path do |form| %>
        <div class="modal-body">
          <div class="form-group">
            <label>Store: </label>
            <%= form.select(:store_id, stores.map{|store| [store.name, store.id]}, {}, { :class => 'form-control' }) %>
          </div>
          <div class="form-group">
            <label>Name: </label>
            <%= form.text_field :name, required: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Price: </label>
            <%= form.number_field :price, step: 0.1, min: 0, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Quantity: </label>
            <%= form.number_field :quantity, step: 1, min: 0, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Variant: </label>
            <%= form.text_field :variant, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Description: </label>
            <%= form.text_area :description, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer border-top-0 d-flex justify-content-center">
          <%= form.submit "Create product", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>