<div class="modal fade" id="store_form" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title">Create Store</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: store, url: stores_path do |form| %>
        <div class="modal-body">
          <div class="form-group">
            <label>Name: </label>
            <%= form.text_field :name, required: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Phone: </label>
            <%= form.telephone_field :phone, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Address: </label>
            <%= form.text_field :address, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer border-top-0 d-flex justify-content-center">
          <%= form.submit "Create Store", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>