<div class="container">
    <div class="row">
        <h2 class="text-center">Bootstrap styling for Responsive Datatable (Server Side)</h2>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#store_form">
          Create store
        </button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#product_form">
          Create product
        </button>
    </div>

    <div class="row">

        <div class="col-md-12">

            <table id="product_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Store</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Variant</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>

            </table>

        </div>
    </div>
</div>
<%= render :partial => 'form_add_product', locals: {stores: stores, product: product} %>
