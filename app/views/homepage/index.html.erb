<div class="container mt-5">
  <br>
    <%= render 'notice' %>
    <div class="row mt-5">
      <h2 class="col-md-6 text-left">List of products</h2>
       <div class="col-md-6 text-right">
        <%= link_to "Stores", stores_path, class: "btn btn-primary" %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#product_form">
          Create product
        </button>
       </div> 
    </div>
    <div class="row">
      <div class="col-md-12">
        <table id="product_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Store</th>
              <th>Name</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Variant</th>
              <th>Description</th>
              <th></th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
</div>
<%= render :partial => 'form_add_product', locals: {stores: stores, product: product} %>

<style type="text/css">
  body, html {
    height: 100%;
    background-repeat: no-repeat;
    background-image: none;
  }
</style>